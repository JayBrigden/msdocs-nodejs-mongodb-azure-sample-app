doctype html 
html 
  Head
    Title Healthway Hospital Records
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body 
    main(class='container' style='max-width:1000px')
      div(class='d-flex align-items-center p-3 bg-forest-green rounded shadow-sm')
        div(class='col 1h-1')
         h1(class='h3 mb-0 text-white lh-1') Healthway Hospital Records
        div(class='col-md-auto 1h-1')
         small(class='text-white') Dr. Brigden
      div(class='d-flex align-items-center my-1 px-2 bg-light-forest-green rounded shadow-sm')
        div(class='col-md-auto')
          button(id='patientBtn' class='py-2') Patients
        div(class='col-md-auto')
            button(id='appointmentBtn' class='py-2') Appointments
        div(class='col-md-auto')
            button(id='inventoryBtn' class='py-2') Inventory
        div(class='col-md-auto')
            button(id='billingBtn' class='py-2') Billing
      div(class='d-flex my-2')
        select(id='patientSelectBox' class='col p-2 mx-1 form select shadow-sm' size='2')
          each PatientRecord in PatientRecords
           option(data-record=PatientRecord) #{PatientRecord.PatientName}
        div(class='col p-2 mx-1 border rounded shadow-sm')
          div(class='p-1')
            label(for='patientIdInput' class='mx-1') Patient ID 
            input(id='patientIdInput')
          div(class='p-1')
            label(for='patientNameInput' class='mx-1') Patient Name
            input(id='patientNameInput')
          div(class='p-1')
            label(for='patientDobInput' class='mx-1') Date of Birth 
            input(id='patientDobInput' type='date')
          div(class='p-1')
            label(for='patientHistoryInput' class='mx-1') Medical History 
            textarea(id='patientHistoryInput' rows='3')
          div(class='p-1')
            label(for='patientMedicationInput' class='mx-1') Current Medication 
            textarea(id='patientMedicationInput' rows='3')
          div(class='p-1')
            label(for='patientContact1NameInput' class='mx-1') Emergency Contact 1 Name 
            input(id='patientContact1NameInput')
          div(class='p-1')
            label(for='patientContact1PhoneInput' class='mx-1') Emergency Contact 1 Phone No.
            input(id='patientContact1PhoneInput')
          div(class='p-1')
            label(for='patientContact1RelationInput' class='mx-1') Emergency Contact 1 Relation 
            input(id='patientContact1RelationInput')
          div(class='p-1')
            label(for='patientContact2NameInput' class='mx-1') Emergency Contact 2 Name 
            input(id='patientContact2NameInput')
          div(class='p-1')
            label(for='patientContact2PhoneInput' class='mx-1') Emergency Contact 2 Phone No.
            input(id='patientContact2PhoneInput')
          div(class='p-1')
            label(for='patientContact2RelationInput' class='mx-1') Emergency Contact 2 Relation 
            input(id='patientContact2RelationInput')
    //-
      div(class='d-flex my-2')
        select(id='appointmentSelectBox' class='col p-2 mx-1 form select shadow-sm' size='2')
          each AppointmentRecord in AppointmentRecords
           option(data-record=AppointmentRecord) #{AppointmentRecord.PatientName}
        div(class='col p-2 mx-1 border rounded shadow-sm')
          div(class='p-1')
            label(for='appointmentIdInput' class='mx-1') Appointment ID 
            input(id='appointmentIdInput')
          div(class='p-1')
            label(for='appointmentPatientIdInput' class='mx-1') Patient ID
            input(id='appointmentPatientIdInput')
          div(class='p-1')
            label(for='appointmentPatientNameInput' class='mx-1') Patient Name 
            input(id='appointmentPatientNameInput')
          div(class='p-1')
            label(for='appointmentDoctorIdInput' class='mx-1') Doctor ID 
            input(id='appointmentDoctorIdInput')
          div(class='p-1')
            label(for='appointmentDateInput' class='mx-1') Date 
            input(id='appointmentDateInput' type='date')
          div(class='p-1')
            label(for='appointmentTimeInput' class='mx-1') Time
            input(id='appointmentTimeInput')
          div(class='p-1')
            label(for='appointmentPurposeInput' class='mx-1') Appointment Purpose
            input(id='appointmentPurposeInput')
          div(class='p-1')
            label(for='appointmentNotesInput' class='mx-1') Patient Notes 
            input(id='appointmentNotesInput')


    script(src='/js/bootstrap.min.js')
    script(src='/scripts/script.js')